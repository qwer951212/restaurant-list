<form action="/restaurants" method="POST" class="m-5">
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">餐廳中文名稱</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name" id="name">
    </div>
  </div>
  <div class="form-group row">
    <label for="name_en" class="col-sm-2 col-form-label">餐廳英文名稱</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name_en" id="name_en">
    </div>
  </div>
  <div class="form-group row">
    <label for="category" class="col-sm-2 col-form-label">分類</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="category" id="category">
    </div>
  </div>
  <div class="form-group row">
    <label for="image" class="col-sm-2 col-form-label">圖片</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="image" id="image">
    </div>
  </div>
  <div class="form-group row">
    <label for="location" class="col-sm-2 col-form-label">位置</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="location" id="location">
    </div>
  </div>
  <div class="form-group row">
    <label for="phone" class="col-sm-2 col-form-label">聯絡電話</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="phone" id="phone">
    </div>
  </div>
  <div class="form-group row">
    <label for="google_map" class="col-sm-2 col-form-label">google_map</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="google_map" id="google_map">
    </div>
  </div>
  <div class="form-group row">
    <label for="rating" class="col-sm-2 col-form-label">評分</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="rating" id="rating">
    </div>
  </div>
  <div class="form-group row">
    <label for="description" class="col-sm-2 col-form-label">描述</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="description" id="description">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </div>
</form>