<form action="/restaurants/{{ restaurant._id }}/edit" method="POST" class="m-5">
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">餐廳中文名稱</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name" id="name" value="{{ restaurant.name }}">
    </div>
  </div>
  <div class="form-group row">
    <label for="name_en" class="col-sm-2 col-form-label">餐廳英文名稱</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="name_en" id="name_en" value="{{ restaurant.name_en }}">
    </div>
  </div>
  <div class="form-group row">
    <label for="category" class="col-sm-2 col-form-label">分類</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="category" id="category" value="{{ restaurant.category }}">
    </div>
  </div>
  <div class="form-group row">
    <label for="image" class="col-sm-2 col-form-label">圖片</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="image" id="image" value="{{ restaurant.image }}">
    </div>
  </div>
  <div class="form-group row">
    <label for="location" class="col-sm-2 col-form-label">位置</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="location" id="location" value="{{ restaurant.location }}">
    </div>
  </div>
  <div class="form-group row">
    <label for="phone" class="col-sm-2 col-form-label">聯絡電話</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="phone" id="phone" value="{{ restaurant.phone }}">
    </div>
  </div>
  <div class="form-group row">
    <label for="google_map" class="col-sm-2 col-form-label">google_map</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="google_map" id="google_map" value="{{ restaurant.google_map }}">
    </div>
  </div>
  <div class="form-group row">
    <label for="rating" class="col-sm-2 col-form-label">評分</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="rating" id="rating" value="{{ restaurant.rating }}">
    </div>
  </div>
  <div class="form-group row">
    <label for="description" class="col-sm-2 col-form-label">餐廳描述</label>
    <div class="col-sm-10">
      <textarea class="form-control" name="description" id="description" value="{{restaurant.description}}"
        rows="3">{{restaurant.description}}</textarea>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Save</button>
      <a href="/" class="btn btn-dark">back</a>
    </div>
  </div>
</form>